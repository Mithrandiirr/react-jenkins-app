pipeline {
    agent any
    
    tools {
        nodejs '23.2.0'  // This name should match your Jenkins NodeJS installation name
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run Linting') {
            steps {
                sh 'npm run lint || true'  // Add this if you have linting configured
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm test -- --watchAll=false'
            }
        }
        
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example deployment to a directory
                sh '''
                    # Create deployment directory if it doesn't exist
                    sudo mkdir -p /var/www/react-app
                    
                    # Copy build files
                    sudo cp -r build/* /var/www/react-app/
                    
                    # Set proper permissions
                    sudo chown -R jenkins:jenkins /var/www/react-app
                    sudo chmod -R 755 /var/www/react-app
                '''
            }
        }
    }
    
    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
        always {
            // Clean workspace after build
            cleanWs()
        }
    }
}